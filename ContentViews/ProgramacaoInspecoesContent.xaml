<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cursores="clr-namespace:Cronos.Platforms.Windows"
             xmlns:viewmodel="clr-namespace:Cronos.ViewModels"
             x:Class="Cronos.ContentViews.ProgramacaoInspecoesContent">

    <ContentView.BindingContext>
        <viewmodel:ProgramacaoInspecoesViewModel />
    </ContentView.BindingContext>
    <StackLayout Margin="20">
        <Grid ColumnDefinitions="*,*">
            <StackLayout Grid.Column="0">
                <Label Text="Programação das Inspeções"
                       FontSize="18"
                       FontFamily="PoppinsSemiBold"
                       TextColor="White"
                       HorizontalTextAlignment="Start"
                       SemanticProperties.HeadingLevel="Level1" />
                <Label Text="{Binding TagDeBusca, StringFormat='Equipamentos / {0} / Programação das Inspeções'}"
                       FontSize="9"
                       TextColor="#8A8A8A"
                       FontFamily="PoppinsLight"
                       HorizontalTextAlignment="Start" />
            </StackLayout>
            <!-- Button voltar -->
            <Label Grid.Column="1"
                   Text="&#xe913;"
                   FontFamily="icons"
                   FontSize="35"
                   TextColor="White"
                   HorizontalOptions="End"
                   VerticalOptions="Start"
                   cursores:CursorBehavior.Cursor="Hand">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Btn_Voltar}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
        <!-- PRÓXIMAS INSPEÇÕES NR-13 -->
        <Frame BackgroundColor="#252525"
               Padding="0"
               BorderColor="Transparent"
               CornerRadius="2"
               Margin="0,10,0,20">
            <StackLayout Margin="20">
                <Label Text="Dados da Próxima Inspeção NR-13"
                       FontFamily="PoppinsSemiBold"
                       FontSize="15"
                       TextColor="White" />
                <Grid RowSpacing="10"
                      Margin="0,20,0,10"
                      ColumnDefinitions="90,90,90,90,*">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Text="Interna"
                           FontSize="12"
                           TextColor="#8A8A8A"
                           Margin="0,0,5,0"
                           FontFamily="PoppinsRegular" />
                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Text="Externa"
                           FontSize="12"
                           TextColor="#8A8A8A"
                           Margin="0,0,5,0"
                           FontFamily="PoppinsRegular" />
                    <Label Grid.Row="0"
                           Grid.Column="2"
                           Text="Testes e Ensaios"
                           FontSize="12"
                           TextColor="#8A8A8A"
                           Margin="0,0,5,0"
                           FontFamily="PoppinsRegular" />
                    <Label Grid.Row="0"
                           Grid.Column="3"
                           Text="Medição Espessura"
                           FontSize="12"
                           TextColor="#8A8A8A"
                           Margin="0,0,5,0"
                           FontFamily="PoppinsRegular" />
                    <Label Grid.Row="0"
                           Grid.Column="4"
                           Text="Observação"
                           FontSize="12"
                           TextColor="#8A8A8A"
                           Margin="0,0,5,0"
                           FontFamily="PoppinsRegular" />
                    <CollectionView Grid.Row="1"
                                    Grid.ColumnSpan="7"
                                    ItemsSource="{Binding ProximaInspecao}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="90,90,90,90,*"
                                      RowSpacing="10">
                                    <Frame Grid.Column="0"
                                           Style="{DynamicResource FrameEQPStyle}">
                                        <!-- Exibe Interna -->
                                        <Label Style="{DynamicResource LabelEQPStyle}"
                                               Text="{Binding Data_Proxima_Interna, StringFormat='{0:dd/MM/yyyy}'}" />
                                    </Frame>
                                    <Frame Grid.Column="1"
                                           Style="{DynamicResource FrameEQPStyle}">
                                        <!-- Exibe Externa -->
                                        <Label Style="{DynamicResource LabelEQPStyle}"
                                               Text="{Binding Data_Proxima_Externa, StringFormat='{0:dd/MM/yyyy}'}" />
                                    </Frame>
                                    <Frame Grid.Column="2"
                                           Style="{DynamicResource FrameEQPStyle}">
                                        <!-- Exibe Testes & Ensaios -->
                                        <Label Style="{DynamicResource LabelEQPStyle}"
                                               Text="{Binding Data_Testes_e_Ensaios, StringFormat='{0:dd/MM/yyyy}'}" />
                                    </Frame>
                                    <Frame Grid.Column="3"
                                           Style="{DynamicResource FrameEQPStyle}">
                                        <!-- Exibe Medição Espessura -->
                                        <Label Style="{DynamicResource LabelEQPStyle}"
                                               Text="{Binding Data_Medicao_Espessura, StringFormat='{0:dd/MM/yyyy}'}" />
                                    </Frame>
                                    <Frame Grid.Column="4"
                                           Style="{DynamicResource FrameEQPStyle}"
                                           Padding="10,0,0,0">
                                        <ScrollView Orientation="Vertical">
                                            <!-- Observação -->
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding Observacao}"
                                                   Padding="0,0,20,0" />
                                        </ScrollView>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </StackLayout>
        </Frame>
        <!-- DADOS DAS ÚLTIMAS INSPEÇÕES NR-13 -->
        <Frame BackgroundColor="#252525"
               Padding="0"
               BorderColor="Transparent"
               CornerRadius="2">
            <StackLayout Margin="20,20,20,50">
                <Label Text="Dados das Últimas Inspeções NR-13"
                       FontFamily="PoppinsSemiBold"
                       FontSize="15"
                       TextColor="White" />
                <ScrollView Orientation="Horizontal">
                    <Grid RowSpacing="10"
                          Margin="0,20,0,20"
                          ColumnDefinitions="200,90,90,90,90,90,90,90,825">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Text="Número Documento"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               Text="Interna"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <Label Grid.Row="0"
                               Grid.Column="2"
                               Text="Externa"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <Label Grid.Row="0"
                               Grid.Column="3"
                               Text="Testes e Ensaios"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <Label Grid.Row="0"
                               Grid.Column="4"
                               Text="Medição Espessura"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <Label Grid.Row="0"
                               Grid.Column="5"
                               Text="Taxa Corrosão Atual"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <Label Grid.Row="0"
                               Grid.Column="6"
                               Text="Taxa Corrosão Histórica"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <Label Grid.Row="0"
                               Grid.Column="7"
                               Text="Maior Taxa Corrosão"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <Label Grid.Row="0"
                               Grid.Column="8"
                               Text="Observação"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="0,0,5,0"
                               FontFamily="PoppinsRegular" />
                        <CollectionView Grid.Row="1"
                                        Grid.ColumnSpan="13"
                                        ItemsSource="{Binding UltimasInspecoes}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="200,90,90,90,90,90,90,90,825">
                                        <Frame Grid.Column="0"
                                               Style="{DynamicResource FrameEQPStyle}">
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding UltimaInspecao.Numero_Documento_Inspecao}">
                                            </Label>
                                        </Frame>
                                        <Frame Grid.Column="1"
                                               Style="{DynamicResource FrameEQPStyle}">
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding UltimaInspecao.Data_Ultima_Interna, StringFormat='{0:dd/MM/yyyy}'}" />
                                        </Frame>
                                        <Frame Grid.Column="2"
                                               Style="{DynamicResource FrameEQPStyle}">
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding UltimaInspecao.Data_Ultima_Externa, StringFormat='{0:dd/MM/yyyy}'}" />
                                        </Frame>
                                        <Frame Grid.Column="3"
                                               Style="{DynamicResource FrameEQPStyle}">
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding UltimaInspecao.Data_Testes_e_Ensaios, StringFormat='{0:dd/MM/yyyy}'}" />
                                        </Frame>
                                        <Frame Grid.Column="4"
                                               Style="{DynamicResource FrameEQPStyle}">
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding UltimaInspecao.Data_Medicao_Espessura, StringFormat='{0:dd/MM/yyyy}'}" />
                                        </Frame>
                                        <Frame Grid.Column="5"
                                               Style="{DynamicResource FrameEQPStyle}">
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding EstimativaVidaResidual.Taxa_Corrosao_Atual}" />
                                        </Frame>
                                        <Frame Grid.Column="6"
                                               Style="{DynamicResource FrameEQPStyle}">
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding EstimativaVidaResidual.Taxa_Corrosao_Historica}" />
                                        </Frame>
                                        <Frame Grid.Column="7"
                                               Style="{DynamicResource FrameEQPStyle}">
                                            <Label Style="{DynamicResource LabelEQPStyle}"
                                                   Text="{Binding MaiorTaxaCorrosaoAtual.Data_Maior_Taxa, StringFormat='{0:dd/MM/yyyy}'}" />
                                        </Frame>
                                        <Frame Grid.Column="8"
                                               Style="{DynamicResource FrameEQPStyle}"
                                               Padding="10,0,0,0">
                                            <ScrollView Orientation="Vertical">
                                                <Label Style="{DynamicResource LabelEQPStyle}"
                                                       Text="{Binding UltimaInspecao.Observacao}"
                                                       Padding="0,0,20,0" />
                                            </ScrollView>
                                        </Frame>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </ScrollView>
                <!-- BUTTONS DE NAVEGAÇÃO -->
                <StackLayout Style="{StaticResource NavigationStackLayoutStyle}"
                             Margin="0,5,-10,0">
                    <!-- Ver resultados anteriores -->
                    <Label Style="{StaticResource NavigationLabelStyle}"
                           cursores:CursorBehavior.Cursor="Hand">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Style="{StaticResource FormattedSpanIconStyle}"
                                      Text="&#xe947;" />
                                <Span Style="{StaticResource FormattedSpanTextStyle}"
                                      Text=" Anterior" />
                            </FormattedString>
                        </Label.FormattedText>
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding .}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <!-- Ver próximos resultados -->
                    <Label Style="{StaticResource NavigationLabelStyle}"
                           cursores:CursorBehavior.Cursor="Hand">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Style="{StaticResource FormattedSpanTextStyle}"
                                      Text="Próximo " />
                                <Span Style="{StaticResource FormattedSpanIconStyle}"
                                      Text="&#xe946;" />
                            </FormattedString>
                        </Label.FormattedText>
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding .}" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentView>
